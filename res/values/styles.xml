<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/CustomActionBarTheme</item>        
    </style>
    
    <style name ="CustomActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#66cdaa</item>
        <!-- <item name="android:background">#FFBB00</item> -->        
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>
    
    <style name ="ActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">        
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name = "NoPlayer" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name ="android:textColor">#A9A9A9</item>"
    </style>
    
    <style name = "YesPlayer" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name ="android:textColor">#E92A69</item>"
        <item name ="android:background">#555555</item>"
    </style>
        

</resources>
