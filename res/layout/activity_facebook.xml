<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >

	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/com_facebook_top_background"
	    android:orientation="horizontal" >
	
	    <Button
	        android:id="@+id/btnFacebookCancle"
	        android:layout_width="wrap_content"
	        android:layout_height="48.0dip"
	        android:layout_alignParentRight="true"
	        android:layout_weight="0"
	        android:background="@drawable/com_facebook_top_button"
	        android:minWidth="55.0dip"
	        android:paddingLeft="5.0dip"
	        android:paddingRight="5.0dip"
	        android:shadowColor="#66000000"
	        android:shadowDx="1.0"
	        android:shadowDy="1.0"
	        android:shadowRadius="1.0"
	        android:text="Cancle"
	        android:textColor="#ffffffff"
	        android:textSize="14.0sp" />
	
	    <LinearLayout
	        android:layout_width="1.0dip"
	        android:layout_height="48dp"
	        android:background="#40000000"
	        android:orientation="vertical" />

    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_weight="1"
    	    android:orientation="vertical" >

    		<TextView
	    	    android:id="@+id/com_facebook_picker_title"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="match_parent"
	    	    android:layout_gravity="center"
	    	    android:layout_marginLeft="10.0dip"
	    	    android:layout_marginRight="10.0dip"
	    	    android:ellipsize="end"
	    	    android:gravity="left|center"
	    	    android:scaleType="center"
	    	    android:shadowColor="#66000000"
	    	    android:shadowDx="1.0"
	    	    android:shadowDy="1.0"
	    	    android:shadowRadius="1.0"
	    	    android:singleLine="true"
	    	    android:text="Post to Wall"
	    	    android:textColor="#ffffffff"
	    	    android:textSize="22.0sp" />
    	</LinearLayout>
	    	
	    	<LinearLayout
	    	    android:layout_width="1.0dip"
	    	    android:layout_height="48dp"
	    	    android:background="#40000000"
	    	    android:orientation="vertical" />
	    	
	    	<Button
	    	    android:id="@+id/btnFacebookPost"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="48.0dip"
	    	    android:layout_alignParentRight="true"
	    	    android:layout_weight="0"
	    	    android:background="@drawable/com_facebook_top_button"
	    	    android:minWidth="55.0dip"
	    	    android:paddingLeft="5.0dip"
	    	    android:paddingRight="5.0dip"
	    	    android:shadowColor="#66000000"
	    	    android:shadowDx="1.0"
	    	    android:shadowDy="1.0"
	    	    android:shadowRadius="1.0"
	    	    android:text="Share"
	    	    android:textColor="#ffffffff"
	    	    android:textSize="14.0sp" />
	
	</LinearLayout>
	
	<EditText
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:layout_margin="5dip"
        android:gravity="left|top" />
	
	<RelativeLayout
        android:id="@+id/message_addition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="20dip" >

        <ImageView
            android:id="@+id/fb_thumb"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dip"
            android:adjustViewBounds="true"
            android:src="@drawable/test_thumbnail" />

        <TextView
            android:id="@+id/link_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dip"
            android:layout_toRightOf="@id/fb_thumb"
            android:text="LinkName"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/link_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/link_name"
            android:layout_toRightOf="@id/fb_thumb"
            android:textColor="@color/plain_gray"
            android:text="description......" />

    </RelativeLayout>

</LinearLayout>