<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/ptr_headerContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#404040"
    >
    <RelativeLayout android:id="@+id/header" style="@style/ptr_header"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:gravity="bottom"
    	>
	    <ImageView android:id="@+id/image" style="@style/ptr_arrow" />
	    <ProgressBar android:id="@+id/spinner" style="@style/ptr_spinner" />
	    <TextView android:id="@+id/text" style="@style/ptr_text" android:textColor="#FFFFFF" />
    </RelativeLayout>
</LinearLayout>