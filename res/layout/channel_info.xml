<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/channel_info"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rect_shadow"
    android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ChannelInfoThumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"
            />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ChannelInfoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ChannelInfoLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:linksClickable="true"
                android:maxLines="1"
                android:text="http://www.naver.com"
                android:textColor="#57C59A"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ChannelInfoDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:text="Desc..."
                android:textSize="13sp" />
        </LinearLayout>

</LinearLayout>

   



   
